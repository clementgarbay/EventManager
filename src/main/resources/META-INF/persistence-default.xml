<?xml version="1.0" encoding="UTF-8"?>
<persistence
        xmlns="http://java.sun.com/xml/ns/persistence"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
        version="2.0">

    <persistence-unit name="EventManagerUnit" transaction-type="RESOURCE_LOCAL">

        <class>fr.eventmanager.model.Event</class>
        <class>fr.eventmanager.model.User</class>

        <properties>
            <property name="javax.persistence.jdbc.driver"   value="org.apache.derby.jdbc.ClientDriver"/>
            <property name="javax.persistence.jdbc.url"      value="jdbc:derby://localhost:1527/eventmanager"/>
            <property name="javax.persistence.jdbc.user"     value="root"/>
            <property name="javax.persistence.jdbc.password" value="admin"/>
            <property name="hibernate.dialect"               value="org.hibernate.dialect.DerbyDialect"/>
            <property name="hibernate.hbm2ddl.auto"          value="none"/>
            <property name="hibernate.show_sql"              value="true"/>
        </properties>
    </persistence-unit>
</persistence>
